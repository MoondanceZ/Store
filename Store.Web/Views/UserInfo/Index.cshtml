
@{
    ViewBag.Title = "Index";
}

<script src="~/Scripts/vue-component/layout/layout.js"></script>
<Layout></Layout>
<div id="app">
    <i-button @@click="show">Click me!</i-button>
    <Modal v-model="visible" title="Welcome">欢迎使用 iView</Modal>
</div>
<script>
    new Vue({
        el: '#app',
        data: {
            visible: false
        },
        methods: {
            show: function () {
                this.visible = true;
            }
        }
    })
</script>